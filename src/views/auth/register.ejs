<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../css/style.css" />
    <title>Register</title>
    <style>
      .error-container {
        background-color: #ffeeee;
        border: 1px solid #ff5c5c;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
      }

      .error-title {
        font-weight: bold;
        color: #ff5c5c;
        margin-bottom: 5px;
      }

      .error-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }

      .error-item {
        color: #ff5c5c;
        margin-bottom: 5px;
      }
    </style>
  </head>
  <body class="cuerpo">
    <%- include('../partials/admin/header') %>
    <main>
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="error-container">
        <p class="error-title">Errores encontrados:</p>
        <ul class="error-list">
          <% errors.forEach(error => { %>
          <li class="error-item"><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
      <% } %>
      <section class="register">
        <div class="register-titulo">
          <h1>REGISTRO DE USUARIO</h1>
        </div>
        <section class="container-register">
          <form action="/register" method="post" class="form-register">
            <div class="div3">
              <label for="email">Email:</label>
            </div>
            <div class="div4">
              <input
                type="email"
                id="email"
                placeholder="Escriba su Email"
                name="email"
                value="<%= typeof values != 'undefined' ? values.email : '' %>"
              />
            </div>
            <div class="div5">
              <label for="password">Contraseña:</label>
            </div>
            <div class="div6">
              <input type="password" id="password" name="password" />
            </div>
            <div class="div7">
              <label for="password_confirmation">Confirmar contraseña:</label>
            </div>
            <div class="div8">
              <input type="password"  id="password_confirmation" name="password_confirmation" />
            </div>
        </section>
        <div class="boton-register">
          <button type="submit">Registrarse</button>
        </div>
      </form>
      </section>
   
     
    </main>
    <%- include('../partials/admin/footer') %>
  </body>
</html>
