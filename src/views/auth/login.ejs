<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../css/style.css" />
    <title>Login</title>
    <style>
      .error-container {
        background-color: #ffeeee;
        border: 1px solid #ff5c5c;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
      }

      .error-title {
        font-weight: bold;
        color: #ff5c5c;
        margin-bottom: 5px;
      }

      .error-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }

      .error-item {
        color: #ff5c5c;
        margin-bottom: 5px;
      }
    </style>
  </head>
  <body class="cuerpo">
    <%- include('../partials/admin/header') %>
    <main>
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="error-container">
          <p class="error-title">Errores encontrados:</p>
          <ul class="error-list">
            <% errors.forEach(error => { %>
            <li class="error-item"><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
        <% } %>
      <div class="login">
        <div class="login-titulo">
          <h1>INICIAR SESIÓN</h1>
        </div>
        <section class="container-form">
          <form action="/login" method="post" class="form-login">
            <div class="div1">
              <label for="email">Correo: </label>
            </div>
            <div class="div2">
              <input
              type="email"
              id="email"
              placeholder="Escriba su Correo"
              name="email"
              value="<%= typeof values != 'undefined' ? values.email : '' %>"
            />
              
            </div>
            <div class="div3">
              <label for="password">Contraseña:</label>
            </div>
            <div class="div4">
              <input type="password" name="password"  />
            </div>
            <div class="div5">
              <label>
                <input type="checkbox" name="recordar" /> Recordar mi contraseña
              </label>
            </div>
            <div class="div6">
              <a href="recuperar-contrasena.html">¿Olvidaste tu contraseña?</a>
            </div>
            <div class="div7"><p>¿No tienes una cuenta?</p></div>
            <div class="div8"><a href="/register">Regístrate aquí</a></div>
          
        </section>

        <div class="boton-iniciar-sesion">
          <button type="submit">Entrar</button>
        </div>
      </form>
      </div>
    </main>
    <%- include('../partials/admin/footer') %>
  </body>
</html>