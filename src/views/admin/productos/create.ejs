<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Create</title>
    <style>
      .error-container {
        background-color: #ffeeee;
        border: 1px solid #ff5c5c;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
      }
    
      .error-title {
        font-weight: bold;
        color: #ff5c5c;
        margin-bottom: 5px;
      }
    
      .error-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }
    
      .error-item {
        color: #ff5c5c;
        margin-bottom: 5px;
      }
    </style>
  </head>
  <body>
    <%- include('../../partials/admin/header') %>
    <main>
      <div>
      <h1 class="titulo-create">CREAR NUEVO ITEM</h1>
    </div>
   
    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
      <div class="error-container">
        <p class="error-title">Errores encontrados:</p>
        <ul class="error-list">
          <% errors.forEach(error => { %>
            <li class="error-item"><%= error.msg %></li>
          <% }); %>
        </ul>
      </div>
    <% } %>
      <section class="container-create">
        <form action="/admin" method="post" enctype="multipart/form-data">
          <article class="categ-lic">
            <div>
              <label>Categoría:</label>
              <select  name="categoria">
                <option selected disabled value="">Elegir</option>
                <option>Figuras</option>
                <option>Figuras</option>
                <option>Figuras</option>
                <!-- no se qué opciones colocar-->
              </select>
            </div>
            <div>
              <label>Licencia:</label>
              <select  name="licencia">
                <option selected disabled value="">Elegir</option>
                <option>Harry Potter</option>
                <option>Star Wars</option>
                <option>Pokemon</option>
              </select>
            </div>
          </article>

          <article class="nombre-producto-container">
            <div class="nombre-producto">
              <label>Nombre del Producto</label>
              <input type="text" name="nombre" placeholder="Ingrese el nombre " value="<%= typeof values != 'undefined' ? values.nombre : '' %>"
              />
            </div>
            <div class="desc-container">
              <textarea type="text" name="descripcion" placeholder="Descripción del Producto"  ><%= typeof values != 'undefined' ? values.descripcion : '' %></textarea>
            </div>
          </article>
          
          <article class="sku-pre-stock-container">
            <div>
              <label>SKU</label>
              <input type="text" name="sku" placeholder="SSK111AB001 "  value="<%= typeof values != 'undefined' ? values.sku : '' %>"
              />
            </div>
            <div>
              <label>Precio</label>
              <input type="number" name="precio" placeholder="$ 0.000,00"  value="<%= typeof values != 'undefined' ? values.precio : '' %>"
              />
            </div>
            <div>
              <label>Stock</label>
              <input class="input-stock" type="number" name="stock" placeholder="0"  value="<%= typeof values != 'undefined' ? values.stock : '' %>"
              />
            </div>
          </article>

          <article class="desc-cuotas-container">
            <div>
              <label>Descuentos</label>
              <input type="number" name="descuentos" placeholder="0%" value="<%= typeof values != 'undefined' ? values.descuentos : '' %>"
              />
            </div>
            <div>
              <label>Cuotas</label>
              <select  name="cuotas">
                <option selected disabled value="">Elegir</option>
                <option>3 cuotas sin interés</option>
                <option>6 cuotas sin interés</option>
                <option>12 cuotas sin interés</option>
              </select>
            </div>
          </article>

          <div class="img-archivo-container">
            <label>Imágenes</label>
            <input type="file" id="imagen" name="imagen" accept="image/*" value="<%= typeof values != 'undefined' ? values.imagen : '' %>"
            />
          </div>

          <article class="botones-container">
            <div>
              <button class="agregar-producto" type="submit" onclick="deshabilitarBoton()">Agregar Producto</button>
            </div>
            <div>
              <button class="limpiar" type="reset">Limpiar</button>
            </div>
          </article>
        </form>
    </main>
    <%- include('../../partials/admin/footer') %>
    <script>
    </script>
  </body>
</html>
