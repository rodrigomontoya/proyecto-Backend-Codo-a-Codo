<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400&family=Raleway&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Edit</title>
    <style>
      .error-container {
        background-color: #ffeeee;
        border: 1px solid #ff5c5c;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
      }
    
      .error-title {
        font-weight: bold;
        color: #ff5c5c;
        margin-bottom: 5px;
      }
    
      .error-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
      }
    
      .error-item {
        color: #ff5c5c;
        margin-bottom: 5px;
      }
    </style>
  </head>
  <body>
    <%- include('../partials/admin/header') %>
    <main>
      <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
        <div class="error-container">
          <p class="error-title">Errores encontrados:</p>
          <ul class="error-list">
            <% errors.forEach(error => { %>
              <li class="error-item"><%= error.msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      <section class="edit-container">
        <!-- <form action="/admin/<%= values.id %>?_method=PUT"
          method="post "
          enctype="multipart/form-data"> -->
          <form action="/admin/<%= values.id %>?_method=PUT" method="post" enctype="multipart/form-data">
            <!-- Campo de anulación de método -->
            <input type="hidden" name="_method" value="PUT">          
        <div>"
          <h1 class="titulo-edit">EDITAR ITEM</h1>
        </div>
        <section class="form-edit-container">
        <article class="cat-licen-container">
          <div>
            <label>Categoría</label>
            <select >
              <option selected disabled value="">Elegir</option>
              <option>Figuras</option>
              <option>Figuras</option>
              <option>Figuras</option>
              <!-- no se que opciones colocar-->
            </select>
          </div>
          <div>
            <label>Licencia</label>
            <select >
              <option selected disabled value="">Elegir</option>
              <option>Harry Potter</option>
              <option>Star Wars</option>
              <option>Pokemon</option>
            </select>
          </div>
        </article>
        <article class="nomb-container">
          <div>
            <label>Nombre del Producto:</label>
            <input type="text" placeholder="Ingrese el nombre " name="nombre" value="<%= typeof values != 'undefined' ? values.nombre : '' %>" />
          </div>
          <div class="descrip-container">
            <textarea placeholder="Descripción del Producto" placeholder="Descripción del Producto"  name="descripcion" ><%= typeof values != 'undefined' ? values.descripcion : '' %></textarea>
          </div>
        </article>
        <article class="sku-prec-container">
          <div>
            <label>SKU:</label>
            <input type="text" placeholder="SSK111AB001 "  name="sku" value="<%= typeof values != 'undefined' ? values.sku : '' %>" />
          </div>
          <div>
            <label>Precio:</label>
            <input class="inp-precio" type="number" placeholder="$ 0.000,00"  name="precio" value="<%= typeof values != 'undefined' ? values.precio : '' %>"/>
          </div>
          <div>
            <label>Stock:</label>
            <input class="inp-stock" type="number" placeholder="0 "  name="stock" value="<%= typeof values != 'undefined' ? values.stock : '' %>"/>
          </div>
        </article>
        <article class="desc-cuo-container">
          <div>
            <label>Descuentos</label>
            <input type="number" placeholder="0%" name="descuentos" value="<%= typeof values != 'undefined' ? values.descuentos : '' %>" />
          </div>
          <div>
            <label>Cuotas</label>
            <select >
              <option selected disabled value="">Elegir</option>
              <option>3 cuotas sin interés</option>
              <option>6 cuotas sin interés</option>
              <option>12 cuotas sin interés</option>
            </select>
          </div>
        </article>
        <div class="imag-container">
          <label>Imágenes</label>
          <input
            type="file"
            id="imagen"
            name="imagen"
            accept="image/*"
            required
          />
        </div>
        <article class="images-container">
          <div class="container-1">
            <img  class="img-1" src="/images\naruto\kakashi_hatake_front.svg" />
            <p>Frente</p>
          </div>
          <div class="container-2">
            <img  class="img-2 "src="/images\naruto\kakashi_hatake_back.svg" />
            <p>Dorso</p>
          </div>
        </article>
      </section>
        <div class="boton-container">
         <a ><button type="submit">Modificar Producto</button></a> 
        </div>
      </section>
    </form>
    </main>
    <%- include('../partials/admin/footer') %>
  </body>
</html>